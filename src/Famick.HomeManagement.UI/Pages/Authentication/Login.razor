@page "/login"
@layout EmptyLayout
@inject IApiClient ApiClient
@inject ApiAuthStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IServiceProvider ServiceProvider
@inject ILocalizer L
@using Famick.HomeManagement.UI.Theme
@using Microsoft.Extensions.DependencyInjection

<LocalizationInitializer>
    <MudThemeProvider Theme="FamickTheme.Theme" IsDarkMode="false" />
    <MudPopoverProvider />
    <MudDialogProvider />
    <MudSnackbarProvider />

    <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
        <MudPaper Elevation="3" Class="pa-8" Style="width: 100%;">
            <MudStack Spacing="4" AlignItems="AlignItems.Center">
                <MudImage Src="_content/Famick.HomeManagement.UI/images/logo-lockup.svg" Height="100" Alt="Famick Home Management" />
                <MudText Typo="Typo.body2" Color="Color.Secondary">@L["auth.signInToAccount"]</MudText>
            </MudStack>

            <MudForm @ref="_form" @bind-IsValid="@_formValid" Class="mt-6">
                @* Server Selection - only shown on mobile apps *@
                @if (_serverSettings != null)
                {
                    <MudSelect T="string"
                               @bind-Value="_selectedServer"
                               Label="@L["auth.serverSelection"]"
                               Variant="Variant.Outlined"
                               Class="mb-4"
                               Disabled="@_isLoading">
                        <MudSelectItem Value="@CloudServer">@L["auth.famickCloud"]</MudSelectItem>
                        <MudSelectItem Value="@SelfHostedOption">@L["auth.selfHosted"]</MudSelectItem>
                    </MudSelect>

                    @if (_selectedServer == SelfHostedOption)
                    {
                        <MudTextField @bind-Value="_customServerUrl"
                                      Label="@L["auth.serverUrl"]"
                                      Variant="Variant.Outlined"
                                      Placeholder="https://your-server.com"
                                      Disabled="@_isLoading"
                                      Class="mb-4" />
                    }
                }

                <MudTextField @bind-Value="_email"
                              Label="@L["auth.email"]"
                              Variant="Variant.Outlined"
                              InputType="InputType.Email"
                              Required="true"
                              RequiredError="@L["auth.emailRequired"]"
                              Validation="@(new EmailAddressAttribute() { ErrorMessage = L["auth.invalidEmail"] })"
                              Disabled="@_isLoading"
                              Class="mb-4" />

                <MudTextField @bind-Value="_password"
                              Label="@L["auth.password"]"
                              Variant="Variant.Outlined"
                              InputType="@(_showPassword ? InputType.Text : InputType.Password)"
                              Required="true"
                              RequiredError="@L["auth.passwordRequired"]"
                              Adornment="Adornment.End"
                              AdornmentIcon="@(_showPassword ? Icons.Material.Filled.VisibilityOff : Icons.Material.Filled.Visibility)"
                              OnAdornmentClick="@(() => _showPassword = !_showPassword)"
                              Disabled="@_isLoading"
                              Class="mb-4" />

                <MudCheckBox @bind-Value="_rememberMe"
                             Label="@L["auth.rememberMe"]"
                             Color="Color.Primary"
                             Disabled="@_isLoading"
                             Class="mb-2" />

                <MudLink Href="/forgot-password"
                         Typo="Typo.body2"
                         Color="Color.Primary"
                         Class="d-block text-right mb-4">
                    @L["auth.forgotPasswordLink"]
                </MudLink>

                @if (!string.IsNullOrEmpty(_errorMessage))
                {
                    <MudAlert Severity="Severity.Error" Class="mb-4">@_errorMessage</MudAlert>
                }

                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           FullWidth="true"
                           Size="Size.Large"
                           OnClick="@HandleLogin"
                           Disabled="@(!_formValid || _isLoading || !IsServerConfigValid)">
                    @if (_isLoading)
                    {
                        <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                        <span>@L["auth.signingIn"]</span>
                    }
                    else
                    {
                        <span>@L["auth.login"]</span>
                    }
                </MudButton>
            </MudForm>
        </MudPaper>
    </MudContainer>
</LocalizationInitializer>

@code {
    private const string CloudServer = "https://hm.famick.com";
    private const string SelfHostedOption = "__self_hosted__";

    private MudForm? _form;
    private bool _formValid;
    private bool _isLoading;
    private bool _showPassword;
    private string _email = string.Empty;
    private string _password = string.Empty;
    private bool _rememberMe;
    private string? _errorMessage;

    private string _selectedServer = CloudServer;
    private string _customServerUrl = string.Empty;

    // On web, server config is always valid (uses current page URL)
    // On mobile, validate that a server is properly configured
    private bool IsServerConfigValid => _serverSettings == null ||
        _selectedServer == CloudServer ||
        (_selectedServer == SelfHostedOption && !string.IsNullOrWhiteSpace(_customServerUrl));

    private string CurrentServerUrl => _selectedServer == SelfHostedOption
        ? _customServerUrl.TrimEnd('/')
        : CloudServer;

    [SupplyParameterFromQuery]
    public string? ReturnUrl { get; set; }

    private IServerSettings? _serverSettings;

    protected override void OnInitialized()
    {
        // Try to get ServerSettings (available in mobile apps)
        _serverSettings = ServiceProvider.GetService<IServerSettings>();

        // Initialize from ServerSettings if available
        if (_serverSettings != null)
        {
            var currentUrl = _serverSettings.BaseUrl;
            if (currentUrl == CloudServer)
            {
                _selectedServer = CloudServer;
            }
            else if (!string.IsNullOrEmpty(currentUrl))
            {
                _selectedServer = SelfHostedOption;
                _customServerUrl = currentUrl;
            }
        }
    }

    private async Task HandleLogin()
    {
        if (_form == null) return;

        await _form.Validate();
        if (!_formValid || !IsServerConfigValid) return;

        _isLoading = true;
        _errorMessage = null;

        try
        {
            // Update server settings before login (for mobile apps)
            if (_serverSettings != null)
            {
                _serverSettings.BaseUrl = CurrentServerUrl;
            }

            var request = new LoginRequest
            {
                Email = _email,
                Password = _password,
                RememberMe = _rememberMe
            };

            var result = await ApiClient.LoginAsync(request);

            if (result.IsSuccess)
            {
                AuthStateProvider.NotifyAuthenticationStateChanged();
                var returnUrl = string.IsNullOrEmpty(ReturnUrl) ? "/" : ReturnUrl;
                Navigation.NavigateTo(returnUrl);
            }
            else
            {
                _errorMessage = result.ErrorMessage ?? L["auth.loginFailed"];
            }
        }
        catch (HttpRequestException)
        {
            _errorMessage = L["auth.connectionError"];
        }
        catch (Exception)
        {
            _errorMessage = L["auth.unexpectedError"];
        }
        finally
        {
            _isLoading = false;
        }
    }
}
