@page "/force-change-password"
@layout EmptyLayout
@inject IApiClient ApiClient
@inject ITokenStorage TokenStorage
@inject ApiAuthStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject ILocalizer L
@using Famick.HomeManagement.UI.Theme
@using Famick.HomeManagement.UI.Localization
@using Famick.HomeManagement.UI.Services
@using Famick.HomeManagement.Core.DTOs.Authentication
@using Famick.HomeManagement.Core.DTOs.Users

<LocalizationInitializer>
    <MudThemeProvider Theme="FamickTheme.Theme" IsDarkMode="false" />
    <MudPopoverProvider />
    <MudDialogProvider />
    <MudSnackbarProvider />

    <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
        <MudPaper Elevation="3" Class="pa-8" Style="width: 100%;">
            <MudStack Spacing="4" AlignItems="AlignItems.Center">
                <MudImage Src="_content/Famick.HomeManagement.UI/images/logo-lockup.svg" Height="100" Alt="Famick Home Management" />
                <MudText Typo="Typo.h5">@L["auth.forceChangePassword.title"]</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary" Align="Align.Center">
                    @L["auth.forceChangePassword.message"]
                </MudText>
            </MudStack>

            <MudForm @ref="_form" @bind-IsValid="@_formValid" Class="mt-6">
                <MudTextField @bind-Value="_currentPassword"
                              Label="@L["profile.currentPassword"]"
                              Variant="Variant.Outlined"
                              InputType="@(_showCurrentPassword ? InputType.Text : InputType.Password)"
                              Required="true"
                              RequiredError="@L["auth.passwordRequired"]"
                              Adornment="Adornment.End"
                              AdornmentIcon="@(_showCurrentPassword ? Icons.Material.Filled.VisibilityOff : Icons.Material.Filled.Visibility)"
                              OnAdornmentClick="@(() => _showCurrentPassword = !_showCurrentPassword)"
                              Disabled="@_isLoading"
                              Class="mb-4" />

                <MudTextField @bind-Value="_newPassword"
                              Label="@L["auth.newPassword"]"
                              Variant="Variant.Outlined"
                              InputType="@(_showNewPassword ? InputType.Text : InputType.Password)"
                              Required="true"
                              RequiredError="@L["auth.passwordRequired"]"
                              Validation="@(new Func<string, string?>(ValidateNewPassword))"
                              Adornment="Adornment.End"
                              AdornmentIcon="@(_showNewPassword ? Icons.Material.Filled.VisibilityOff : Icons.Material.Filled.Visibility)"
                              OnAdornmentClick="@(() => _showNewPassword = !_showNewPassword)"
                              Disabled="@_isLoading"
                              Class="mb-4" />

                <MudTextField @bind-Value="_confirmPassword"
                              Label="@L["auth.confirmPassword"]"
                              Variant="Variant.Outlined"
                              InputType="@(_showConfirmPassword ? InputType.Text : InputType.Password)"
                              Required="true"
                              RequiredError="@L["auth.confirmPasswordRequired"]"
                              Validation="@(new Func<string, string?>(ValidateConfirmPassword))"
                              Adornment="Adornment.End"
                              AdornmentIcon="@(_showConfirmPassword ? Icons.Material.Filled.VisibilityOff : Icons.Material.Filled.Visibility)"
                              OnAdornmentClick="@(() => _showConfirmPassword = !_showConfirmPassword)"
                              Disabled="@_isLoading"
                              Class="mb-4" />

                @if (!string.IsNullOrEmpty(_errorMessage))
                {
                    <MudAlert Severity="Severity.Error" Class="mb-4">@_errorMessage</MudAlert>
                }

                @if (!string.IsNullOrEmpty(_successMessage))
                {
                    <MudAlert Severity="Severity.Success" Class="mb-4">@_successMessage</MudAlert>
                }

                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           FullWidth="true"
                           Size="Size.Large"
                           OnClick="@HandleChangePassword"
                           Disabled="@(!_formValid || _isLoading)">
                    @if (_isLoading)
                    {
                        <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                        <span>@L["auth.forceChangePassword.submit"]</span>
                    }
                    else
                    {
                        <span>@L["auth.forceChangePassword.submit"]</span>
                    }
                </MudButton>
            </MudForm>
        </MudPaper>
    </MudContainer>
</LocalizationInitializer>

@code {
    private MudForm? _form;
    private bool _formValid;
    private bool _isLoading;
    private bool _showCurrentPassword;
    private bool _showNewPassword;
    private bool _showConfirmPassword;
    private string _currentPassword = string.Empty;
    private string _newPassword = string.Empty;
    private string _confirmPassword = string.Empty;
    private string? _errorMessage;
    private string? _successMessage;

    // Store email for re-login after password change
    private string? _userEmail;

    protected override async Task OnInitializedAsync()
    {
        // Verify user is authenticated and actually needs to change password
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated != true)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        var mustChange = user.FindFirst("must_change_password");
        if (mustChange?.Value != "true")
        {
            Navigation.NavigateTo("/");
            return;
        }

        _userEmail = user.FindFirst("email")?.Value
                     ?? user.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;
    }

    private string? ValidateNewPassword(string password)
    {
        if (string.IsNullOrEmpty(password))
            return null;
        if (password.Length < 8)
            return L["auth.passwordMinLength"];
        return null;
    }

    private string? ValidateConfirmPassword(string confirm)
    {
        if (string.IsNullOrEmpty(confirm))
            return null;
        if (confirm != _newPassword)
            return L["auth.passwordsDoNotMatch"];
        return null;
    }

    private async Task HandleChangePassword()
    {
        if (_form == null) return;

        await _form.Validate();
        if (!_formValid) return;

        _isLoading = true;
        _errorMessage = null;
        _successMessage = null;

        try
        {
            var request = new ChangePasswordRequest
            {
                CurrentPassword = _currentPassword,
                NewPassword = _newPassword,
                ConfirmPassword = _confirmPassword
            };

            var result = await ApiClient.PostAsync<ChangePasswordRequest>(
                "api/v1/profile/change-password", request);

            if (result.IsSuccess)
            {
                _successMessage = L["auth.forceChangePassword.success"];
                StateHasChanged();

                // Re-login with new password to get a fresh JWT without the must_change_password claim
                if (!string.IsNullOrEmpty(_userEmail))
                {
                    var loginResult = await ApiClient.LoginAsync(new LoginRequest
                    {
                        Email = _userEmail,
                        Password = _newPassword,
                        RememberMe = true
                    });

                    if (loginResult.IsSuccess)
                    {
                        AuthStateProvider.NotifyAuthenticationStateChanged();
                        await Task.Delay(1000); // Brief pause so user sees success message
                        Navigation.NavigateTo("/");
                        return;
                    }
                }

                // If re-login fails, clear tokens and redirect to login
                await TokenStorage.ClearTokensAsync();
                AuthStateProvider.NotifyAuthenticationStateChanged();
                await Task.Delay(1000);
                Navigation.NavigateTo("/login");
            }
            else
            {
                _errorMessage = result.ErrorMessage ?? L["auth.resetFailed"];
            }
        }
        catch (Exception)
        {
            _errorMessage = L["auth.unexpectedError"];
        }
        finally
        {
            _isLoading = false;
        }
    }
}
