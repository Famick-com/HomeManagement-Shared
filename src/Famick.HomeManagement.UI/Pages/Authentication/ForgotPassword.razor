@page "/forgot-password"
@layout EmptyLayout
@inject IApiClient ApiClient
@inject NavigationManager Navigation
@inject ILocalizer L
@using Famick.HomeManagement.UI.Theme
@using Famick.HomeManagement.Core.DTOs.Authentication

<LocalizationInitializer>
    <MudThemeProvider Theme="FamickTheme.Theme" IsDarkMode="false" />
    <MudPopoverProvider />
    <MudDialogProvider />
    <MudSnackbarProvider />

    <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
        <MudPaper Elevation="3" Class="pa-8" Style="width: 100%;">
            <MudStack Spacing="4" AlignItems="AlignItems.Center">
                <MudImage Src="_content/Famick.HomeManagement.UI/images/logo-lockup.svg" Height="100" Alt="Famick Home Management" />
                <MudText Typo="Typo.h5">@L["auth.forgotPassword"]</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary" Align="Align.Center">
                    @L["auth.forgotPasswordDescription"]
                </MudText>
            </MudStack>

            @if (_submitted)
            {
                <MudStack Spacing="4" Class="mt-6">
                    <MudAlert Severity="Severity.Success">
                        @L["auth.resetEmailSent"]
                    </MudAlert>
                    <MudButton Variant="Variant.Text"
                               Color="Color.Primary"
                               FullWidth="true"
                               OnClick="@(() => Navigation.NavigateTo("/login"))">
                        @L["auth.backToLogin"]
                    </MudButton>
                </MudStack>
            }
            else
            {
                <MudForm @ref="_form" @bind-IsValid="@_formValid" Class="mt-6">
                    <MudTextField @bind-Value="_email"
                                  Label="@L["auth.email"]"
                                  Variant="Variant.Outlined"
                                  InputType="InputType.Email"
                                  Required="true"
                                  RequiredError="@L["auth.emailRequired"]"
                                  Validation="@(new EmailAddressAttribute() { ErrorMessage = L["auth.invalidEmail"] })"
                                  Disabled="@_isLoading"
                                  Class="mb-4" />

                    @if (!string.IsNullOrEmpty(_errorMessage))
                    {
                        <MudAlert Severity="Severity.Error" Class="mb-4">@_errorMessage</MudAlert>
                    }

                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               FullWidth="true"
                               Size="Size.Large"
                               OnClick="@HandleSubmit"
                               Disabled="@(!_formValid || _isLoading)">
                        @if (_isLoading)
                        {
                            <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                            <span>@L["auth.sendingResetLink"]</span>
                        }
                        else
                        {
                            <span>@L["auth.sendResetLink"]</span>
                        }
                    </MudButton>

                    <MudButton Variant="Variant.Text"
                               Color="Color.Primary"
                               FullWidth="true"
                               Class="mt-2"
                               OnClick="@(() => Navigation.NavigateTo("/login"))">
                        @L["auth.backToLogin"]
                    </MudButton>
                </MudForm>
            }
        </MudPaper>
    </MudContainer>
</LocalizationInitializer>

@code {
    private MudForm? _form;
    private bool _formValid;
    private bool _isLoading;
    private bool _submitted;
    private string _email = string.Empty;
    private string? _errorMessage;

    private async Task HandleSubmit()
    {
        if (_form == null) return;

        await _form.Validate();
        if (!_formValid) return;

        _isLoading = true;
        _errorMessage = null;

        try
        {
            var request = new ForgotPasswordRequest { Email = _email };
            var result = await ApiClient.ForgotPasswordAsync(request);

            // Always show success to prevent email enumeration
            _submitted = true;
        }
        catch (Exception)
        {
            _errorMessage = L["auth.unexpectedError"];
        }
        finally
        {
            _isLoading = false;
        }
    }
}
