@inject IApiClient ApiClient
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject ILocalizer L
@using Famick.HomeManagement.Core.DTOs.Contacts
@using Famick.HomeManagement.Domain.Enums

@if (_isLoading)
{
    <MudProgressLinear Indeterminate="true" Color="Color.Primary" />
}
else
{
    <MudStack Spacing="3">
        @if (!ReadOnly)
        {
            <MudStack Row="true" Justify="Justify.FlexEnd">
                <MudButton Variant="Variant.Outlined"
                           Color="Color.Primary"
                           StartIcon="@Icons.Material.Filled.Add"
                           OnClick="OpenAddDialog">
                    @L["contacts.emails.add"]
                </MudButton>
            </MudStack>
        }

        @if (_emails.Count == 0)
        {
            <MudAlert Severity="Severity.Info">@L["contacts.emails.none"]</MudAlert>
        }
        else
        {
            <MudSimpleTable Dense="true" Hover="true" Elevation="1">
                <thead>
                    <tr>
                        <th>@L["contacts.emails.type"]</th>
                        <th>@L["contacts.emails.address"]</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var email in _emails)
                    {
                        <tr>
                            <td>
                                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                    <MudIcon Icon="@GetEmailIcon(email.Tag)" Size="Size.Small" />
                                    <MudText>@L[$"contacts.emails.tag.{email.Tag}"]</MudText>
                                    @if (email.IsPrimary)
                                    {
                                        <MudChip T="string" Size="Size.Small" Color="Color.Success" Variant="Variant.Outlined">@L["common.primary"]</MudChip>
                                    }
                                </MudStack>
                            </td>
                            <td>
                                <MudLink Href="@($"mailto:{email.Email}")">@email.Email</MudLink>
                            </td>
                            <td>
                                @if (!ReadOnly)
                                {
                                    <MudStack Row="true" Spacing="1" Justify="Justify.FlexEnd">
                                        @if (!email.IsPrimary)
                                        {
                                            <MudTooltip Text="@L["contacts.emails.setPrimary"]">
                                                <MudIconButton Icon="@Icons.Material.Filled.Star"
                                                               Size="Size.Small"
                                                               Color="Color.Warning"
                                                               OnClick="@(() => SetPrimaryEmail(email))" />
                                            </MudTooltip>
                                        }
                                        <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                                       Size="Size.Small"
                                                       Color="Color.Error"
                                                       OnClick="@(() => DeleteEmail(email))" />
                                    </MudStack>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </MudSimpleTable>
        }
    </MudStack>
}

@* Add Email Dialog *@
<MudDialog @bind-Visible="_dialogVisible" Options="@(new DialogOptions { MaxWidth = MaxWidth.ExtraSmall, FullWidth = true })">
    <TitleContent>
        <MudText Typo="Typo.h6">@L["contacts.emails.add"]</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="_formValid">
            <MudStack Spacing="3">
                <MudSelect T="EmailTag" @bind-Value="_formTag"
                           Label="@L["contacts.emails.type"]"
                           Variant="Variant.Outlined"
                           Required="true">
                    @foreach (EmailTag tag in Enum.GetValues<EmailTag>())
                    {
                        <MudSelectItem T="EmailTag" Value="@tag">@L[$"contacts.emails.tag.{tag}"]</MudSelectItem>
                    }
                </MudSelect>

                <MudTextField @bind-Value="_formEmail"
                              Label="@L["contacts.emails.address"]"
                              Variant="Variant.Outlined"
                              InputType="InputType.Email"
                              Required="true"
                              RequiredError="@L["validation.required"]"
                              Validation="@(new EmailAddressAttribute() { ErrorMessage = L["validation.email"] })" />

                <MudCheckBox @bind-Value="_formIsPrimary"
                             Label="@L["contacts.emails.makePrimary"]"
                             Color="Color.Primary" />
            </MudStack>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CloseDialog">@L["common.cancel"]</MudButton>
        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   OnClick="HandleSave"
                   Disabled="@(!_formValid || _isSaving)">
            @if (_isSaving)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
            }
            @L["common.save"]
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public Guid ContactId { get; set; }
    [Parameter] public bool ReadOnly { get; set; }

    private bool _isLoading = true;
    private List<ContactEmailAddressDto> _emails = new();
    private bool _dialogVisible;
    private bool _formValid;
    private bool _isSaving;
    private MudForm? _form;

    private EmailTag _formTag = EmailTag.Personal;
    private string _formEmail = string.Empty;
    private bool _formIsPrimary;

    protected override async Task OnInitializedAsync()
    {
        await LoadEmailsAsync();
    }

    private async Task LoadEmailsAsync()
    {
        _isLoading = true;
        try
        {
            var result = await ApiClient.GetAsync<ContactDto>($"api/v1/contacts/{ContactId}");
            if (result.IsSuccess && result.Data != null)
            {
                _emails = result.Data.EmailAddresses;
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading emails: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void OpenAddDialog()
    {
        _formTag = EmailTag.Personal;
        _formEmail = string.Empty;
        _formIsPrimary = _emails.Count == 0;
        _dialogVisible = true;
    }

    private void CloseDialog()
    {
        _dialogVisible = false;
    }

    private async Task HandleSave()
    {
        if (_form != null)
        {
            await _form.Validate();
            if (!_formValid) return;
        }

        _isSaving = true;
        try
        {
            var request = new AddEmailRequest
            {
                Tag = _formTag,
                Email = _formEmail,
                IsPrimary = _formIsPrimary
            };

            var result = await ApiClient.PostAsync<AddEmailRequest, ContactEmailAddressDto>(
                $"api/v1/contacts/{ContactId}/emails", request);

            if (result.IsSuccess)
            {
                Snackbar.Add(L["contacts.emails.added"], Severity.Success);
                CloseDialog();
                await LoadEmailsAsync();
            }
            else
            {
                Snackbar.Add(result.ErrorMessage ?? L["errors.generic"], Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error adding email: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSaving = false;
        }
    }

    private async Task SetPrimaryEmail(ContactEmailAddressDto email)
    {
        try
        {
            var result = await ApiClient.PutAsync($"api/v1/contacts/{ContactId}/emails/{email.Id}/primary");
            if (result.IsSuccess)
            {
                Snackbar.Add(L["contacts.emails.primarySet"], Severity.Success);
                await LoadEmailsAsync();
            }
            else
            {
                Snackbar.Add(result.ErrorMessage ?? L["errors.generic"], Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error setting primary: {ex.Message}", Severity.Error);
        }
    }

    private async Task DeleteEmail(ContactEmailAddressDto email)
    {
        var confirmed = await DialogService.ShowMessageBox(
            L["confirmations.deleteTitle"],
            L["contacts.emails.confirmDelete"],
            yesText: L["common.delete"],
            cancelText: L["common.cancel"]);

        if (confirmed != true) return;

        try
        {
            var result = await ApiClient.DeleteAsync($"api/v1/contacts/emails/{email.Id}");
            if (result.IsSuccess)
            {
                Snackbar.Add(L["contacts.emails.deleted"], Severity.Success);
                await LoadEmailsAsync();
            }
            else
            {
                Snackbar.Add(result.ErrorMessage ?? L["errors.generic"], Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error deleting email: {ex.Message}", Severity.Error);
        }
    }

    private static string GetEmailIcon(EmailTag tag) => tag switch
    {
        EmailTag.Personal => Icons.Material.Filled.Person,
        EmailTag.Work => Icons.Material.Filled.Business,
        EmailTag.School => Icons.Material.Filled.School,
        _ => Icons.Material.Filled.Email
    };
}
