@using Famick.HomeManagement.Core.DTOs.Stock
@using Famick.HomeManagement.Domain.Enums
@inject ILocalizer L

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">@L["inventory.markOpen"]</MudText>
    </TitleContent>
    <DialogContent>
        <MudStack Spacing="3">
            @* Product info *@
            <MudText Typo="Typo.subtitle1" Class="font-weight-medium">
                @Entry.ProductName
            </MudText>

            <MudText Typo="Typo.body2" Color="Color.Secondary">
                @L["inventory.currentAmount"]: @Entry.Amount @Entry.QuantityUnitName
            </MudText>

            <MudDivider />

            @* Tracking mode selection *@
            <MudText Typo="Typo.body1">@L["inventory.trackingMode"]</MudText>

            <MudRadioGroup @bind-Value="_trackingMode">
                <MudRadio Value="@OpenTrackingMode.Percentage" Color="Color.Primary" Dense="true">
                    @L["inventory.percentage"]
                </MudRadio>
                <MudRadio Value="@OpenTrackingMode.Count" Color="Color.Primary" Dense="true">
                    @L["inventory.count"]
                </MudRadio>
            </MudRadioGroup>

            @* Remaining amount input based on tracking mode *@
            @if (_trackingMode == OpenTrackingMode.Percentage)
            {
                <MudStack Spacing="2">
                    <MudText Typo="Typo.body2">@L["inventory.remainingPercentage"]: @(_remainingPercentage)%</MudText>
                    <MudSlider @bind-Value="_remainingPercentage"
                               Min="0" Max="100" Step="5"
                               Color="Color.Primary"
                               Variant="Variant.Filled">
                        @(_remainingPercentage)%
                    </MudSlider>
                </MudStack>
            }
            else
            {
                <MudNumericField T="decimal" @bind-Value="_remainingCount"
                                 Label="@L["inventory.remainingCount"]"
                                 Variant="Variant.Outlined"
                                 Min="0m"
                                 Max="@Entry.Amount"
                                 Step="1m"
                                 Adornment="Adornment.End"
                                 AdornmentText="@Entry.QuantityUnitName" />
            }
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@L["common.cancel"]</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled"
                   OnClick="Submit">
            @L["inventory.markOpen"]
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public StockEntryDto Entry { get; set; } = null!;

    private OpenTrackingMode _trackingMode = OpenTrackingMode.Percentage;
    private int _remainingPercentage = 100;
    private decimal _remainingCount;

    protected override void OnInitialized()
    {
        _remainingCount = Entry.Amount;
    }

    private void Cancel() => MudDialog.Cancel();

    private void Submit()
    {
        var request = new OpenProductRequest
        {
            TrackingMode = _trackingMode,
            RemainingAmount = _trackingMode == OpenTrackingMode.Percentage
                ? _remainingPercentage / 100m
                : _remainingCount
        };

        MudDialog.Close(DialogResult.Ok(request));
    }
}
