@inject IApiClient ApiClient
@inject ISnackbar Snackbar
@inject ILocalizer L
@inject IDialogService DialogService
@using Famick.HomeManagement.Core.DTOs.Vehicles
@using Famick.HomeManagement.Core.DTOs.Wizard
@using Famick.HomeManagement.UI.Components.Home.SetupWizard.Components

<MudStack Spacing="3">
    <MudText Typo="Typo.h6">@L["home.setupWizard.step.vehicles"]</MudText>
    <MudText Typo="Typo.body2" Color="Color.Secondary">@L["home.setupWizard.step.vehiclesDesc"]</MudText>

    @if (_vehicles.Count > 0)
    {
        <MudDataGrid T="VehicleSummaryDto"
                     Items="@_vehicles"
                     Dense="true"
                     Hover="true">
            <Columns>
                <PropertyColumn Property="x => x.DisplayName" Title="@L["vehicle.name"]" />
                <PropertyColumn Property="x => x.LicensePlate" Title="@L["vehicle.licensePlate"]" />
                <PropertyColumn Property="x => x.CurrentMileage" Title="@L["vehicle.mileage"]" />
                <PropertyColumn Property="x => x.PrimaryDriverName" Title="@L["vehicle.primaryDriver"]" />
                <TemplateColumn Title="@L["common.actions"]" Sortable="false">
                    <CellTemplate>
                        <MudStack Row="true" Spacing="1">
                            <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                           Size="Size.Small"
                                           Color="Color.Primary"
                                           OnClick="@(() => EditVehicle(context.Item))" />
                            <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                           Size="Size.Small"
                                           Color="Color.Error"
                                           OnClick="@(() => DeleteVehicle(context.Item))" />
                        </MudStack>
                    </CellTemplate>
                </TemplateColumn>
            </Columns>
        </MudDataGrid>
    }
    else
    {
        <MudAlert Severity="Severity.Info">@L["home.setupWizard.noVehicles"]</MudAlert>
    }

    <MudButton Variant="Variant.Outlined"
               Color="Color.Primary"
               StartIcon="@Icons.Material.Filled.DirectionsCar"
               OnClick="AddVehicle">
        @L["vehicle.add"]
    </MudButton>
</MudStack>

<MudStack Row="true" Justify="Justify.SpaceBetween" Class="mt-6">
    <MudStack Row="true" Spacing="2">
        <MudButton Variant="Variant.Text"
                   Color="Color.Default"
                   OnClick="HandleExit">
            @L["common.exitSetup"]
        </MudButton>
        <MudButton Variant="Variant.Outlined"
                   OnClick="HandleBack">
            @L["common.back"]
        </MudButton>
    </MudStack>
    <MudStack Row="true" Spacing="2">
        <MudButton Variant="Variant.Text"
                   Color="Color.Default"
                   OnClick="HandleSkip">
            @L["common.skip"]
        </MudButton>
        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   OnClick="HandleComplete"
                   Disabled="@_isCompleting">
            @if (_isCompleting)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
            }
            @L["home.setupWizard.complete"]
        </MudButton>
    </MudStack>
</MudStack>

@code {
    [Parameter] public List<VehicleSummaryDto> Vehicles { get; set; } = new();
    [Parameter] public List<HouseholdMemberDto> Members { get; set; } = new();
    [Parameter] public EventCallback OnComplete { get; set; }
    [Parameter] public EventCallback OnBack { get; set; }
    [Parameter] public EventCallback OnSkip { get; set; }
    [Parameter] public EventCallback OnExit { get; set; }

    private List<VehicleSummaryDto> _vehicles = new();
    private bool _isCompleting;

    protected override void OnParametersSet()
    {
        if (Vehicles != null && _vehicles.Count == 0 && Vehicles.Count > 0)
        {
            _vehicles = new List<VehicleSummaryDto>(Vehicles);
        }
    }

    private async Task AddVehicle()
    {
        var parameters = new DialogParameters<VehicleEditorDialog>
        {
            { x => x.Members, Members }
        };

        var dialog = await DialogService.ShowAsync<VehicleEditorDialog>(
            L["vehicle.add"], parameters,
            new DialogOptions { MaxWidth = MaxWidth.Medium, FullWidth = true });

        var result = await dialog.Result;
        if (result != null && !result.Canceled)
        {
            await RefreshVehicles();
        }
    }

    private async Task EditVehicle(VehicleSummaryDto vehicle)
    {
        // Load full vehicle data
        var vehicleResult = await ApiClient.GetAsync<VehicleDto>($"api/v1/vehicles/{vehicle.Id}");
        if (!vehicleResult.IsSuccess || vehicleResult.Data == null)
        {
            Snackbar.Add(vehicleResult.ErrorMessage ?? L["common.error"], Severity.Error);
            return;
        }

        var parameters = new DialogParameters<VehicleEditorDialog>
        {
            { x => x.Vehicle, vehicleResult.Data },
            { x => x.Members, Members }
        };

        var dialog = await DialogService.ShowAsync<VehicleEditorDialog>(
            L["vehicle.edit"], parameters,
            new DialogOptions { MaxWidth = MaxWidth.Medium, FullWidth = true });

        var result = await dialog.Result;
        if (result != null && !result.Canceled)
        {
            await RefreshVehicles();
        }
    }

    private async Task DeleteVehicle(VehicleSummaryDto vehicle)
    {
        var result = await ApiClient.DeleteAsync($"api/v1/vehicles/{vehicle.Id}");
        if (result.IsSuccess)
        {
            _vehicles.RemoveAll(v => v.Id == vehicle.Id);
            Snackbar.Add(L["vehicle.deleted"], Severity.Success);
        }
        else
        {
            Snackbar.Add(result.ErrorMessage ?? L["common.error"], Severity.Error);
        }
    }

    private async Task RefreshVehicles()
    {
        var result = await ApiClient.GetAsync<List<VehicleSummaryDto>>("api/v1/vehicles");
        if (result.IsSuccess && result.Data != null)
        {
            _vehicles = result.Data;
        }
    }

    private async Task HandleComplete()
    {
        _isCompleting = true;
        try
        {
            var result = await ApiClient.PostAsync<object>("api/v1/wizard/complete", new { });
            if (result.IsSuccess)
            {
                Snackbar.Add(L["home.setupWizard.success"], Severity.Success);
                await OnComplete.InvokeAsync();
            }
            else
            {
                Snackbar.Add(result.ErrorMessage ?? L["common.error"], Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isCompleting = false;
        }
    }

    private async Task HandleBack() => await OnBack.InvokeAsync();
    private async Task HandleSkip() => await OnSkip.InvokeAsync();
    private async Task HandleExit() => await OnExit.InvokeAsync();
}
